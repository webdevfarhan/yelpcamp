<% include ../partials/header %>
<div class="container">
  <div class"row">
    <h1 style="text-align:center; margin:25px;">Add new comment to <%=campground.name%></h1>
    <div style="width:30%; margin:0 auto;">
      <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="text" />
        </div>
        <div class="form-group">
      <button class="btn btn-large btn-primary btn-block">Submit</button>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
